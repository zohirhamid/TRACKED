{
  "build": {
    "builder": "nixpacks"
  },
  "deploy": {
    "releaseCommand": "python manage.py migrate --noinput",
    "startCommand": "gunicorn config.wsgi:application --bind 0.0.0.0:$PORT --log-level info --access-logfile - --error-logfile -",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
